<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <ImageView

        android:id="@+id/center"
        android:background="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="56dp"
        android:layout_height="56dp" />

    <ImageView

        android:id="@+id/center_End"
        android:background="#333333"
        android:layout_width="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="54dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/center"
        android:layout_height="56dp" />

    <ImageView

        android:id="@+id/center_Start"
        android:background="#333333"
        android:layout_width="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/center"
        android:layout_margin="54dp"
        android:layout_height="56dp" />


    <ImageView

        android:id="@+id/top"
        android:background="#333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="54dp"
        app:layout_constraintBottom_toTopOf="@id/center"
        android:layout_height="56dp"
        android:layout_width="56dp"  />

    <ImageView

        android:id="@+id/top_End"
        android:background="#333333"
        app:layout_constraintEnd_toEndOf="@+id/center_End"
        app:layout_constraintBottom_toTopOf="@+id/center_End"
        android:layout_marginBottom="54dp"
        android:layout_height="56dp"
        android:layout_width="56dp"  />

    <ImageView

        android:id="@+id/top_Start"
        android:background="#333333"
        app:layout_constraintStart_toStartOf="@+id/center_Start"
        app:layout_constraintBottom_toTopOf="@+id/center_Start"
        android:layout_marginBottom="54dp"
        android:layout_height="56dp"
        android:layout_width="56dp"  />


    <ImageView

        android:id="@+id/bottom"
        android:background="#333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="54dp"
        app:layout_constraintTop_toBottomOf="@+id/center"
        android:layout_marginTop="54dp"
        android:layout_height="56dp"
        android:layout_width="56dp"  />

    <ImageView

        android:id="@+id/bottom_End"
        android:background="#333333"
        app:layout_constraintEnd_toEndOf="@+id/center_End"
        app:layout_constraintTop_toBottomOf="@+id/center"
        android:layout_marginTop="54dp"
        android:layout_height="56dp"
        android:layout_width="56dp"  />

    <ImageView

        android:id="@+id/bottom_Start"
        android:background="#333333"
        app:layout_constraintStart_toStartOf="@+id/center_Start"
        app:layout_constraintTop_toBottomOf="@+id/center_Start"
        android:layout_marginTop="54dp"
        android:layout_height="56dp"
        android:layout_width="56dp"  />
    
    
    <Button
        android:id="@+id/button_reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/almendra_sc"
        android:textColor="@color/black"
        android:text="RESETAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




    <Toolbar

        android:id="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="21dp">

        <!-- Faixa roxa -->
        <View
            android:id="@+id/faixa_roxa"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="#6750A3" />


    </LinearLayout>

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"
        android:fontFamily="@font/almendra_sc"
        android:text="Jogo da Velha"
        android:textColor="#0B0B0B"
        android:textSize="30sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>